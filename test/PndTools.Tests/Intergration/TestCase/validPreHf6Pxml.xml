<?xml version="1.0" encoding="UTF-8"?>
<PXML xmlns="http://openpandora.org/namespaces/PXML">
	<package id="packageId">
		<version major="1" minor="0" release="0" build="0" type="release"/>
		<author name="Package Author" website="http://www.example.com"/>
		<titles>
			<title lang="en_US">Package Title</title>
		</titles>
		<descriptions>
			<description lang="en_US">Package Description.</description>
		</descriptions>
		<icon src="icon.png"/>
	</package>
	<application id="applicationId" appdata="APPDATA">
		<exec command="run.sh"/>
		<version major="1" minor="0" release="0" build="0" type="release"/>
		<!--This program's version-->
		<author name="Application Author" website="http://www.example.com"/>
		<!--Optional email and website, name required-->
		<title lang="en_US">Application Title</title>
		<!--Extra <title> block for compatibility with OS versions before HF6-->
		<description lang="en_US">Application Description.</description><!--Extra <description> block for compatibility with OS versions before HF6-->
		<icon src="icon.png"/>
		<licenses>
			<license name="freeware"/><!--Optional url and sourcecodeurl, mandatory name-->
		</licenses>
		<previewpics>
			<pic src="previewpics/preview3.png"/>
			<pic src="previewpics/preview2.png"/>
			<pic src="previewpics/preview1.png"/>
		</previewpics>
		<info name="Application ReadMe" type="text/html" src="readme.txt"/>
		<!--the categories has to conform to the FDO categories, those will be enforced by the schema and libpnd!-->
		<categories>
			<category name="Game"><!--Main category: a category like "Game", "Graphics", "Network", etc-->
				<subcategory name="ArcadeGame"/><!--Subcategory 1: a subcategory, like "BoardGame", "StrategyGame", "ActionGame"-->
			</category>
		</categories>
		<!--<associations>
      File associations, with a short description, an extension, and start params.-->
		<!--<association name="View Word File" filetype="application/msword" exec="-f %s -t doc"/>
    </associations>-->
		<!--<clockspeed frequency="700"/>--><!--Frequency in Hz-->
	</application>
</PXML>
